class solution{
	Scanner sc = new Scanner(System.in);
	int N = sc.nextInt();
	int count = 0;
	public void exe() {
	while(true) {
		if(N %2 ==0) {
			N = N/2;
			count++;
		}
		else if( N%2 != 0) {
			N = (N*3)+1;
			count++;
		}
		if(N==1) {
			break;
		}
		if(count >500) {
			System.out.println("-1");
		}
	}
	System.out.println(count);
	}
 
	
}

public class javapractice {
	
	public static void main(String[] args) {
	solution c1 = new solution();
	c1.exe();
	}   
	
